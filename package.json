{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "<fndcaique@gmail.com>",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "docker-compose -f infra/compose.yaml up -d",
    "services:stop": "docker-compose -f infra/compose.yaml stop",
    "services:down": "docker-compose -f infra/compose.yaml down -v",
    "lint": "biome check --verbose",
    "lint:fix": "biome check --write --verbose",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m infra/migrations down"
  },
  "dependencies": {
    "next": "^14.2.33",
    "pg": "8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "node-pg-migrate": "^8.0.3"
  }
}

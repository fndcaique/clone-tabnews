{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "<fndcaique@gmail.com>",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f ./infra/compose.yaml up -d",
    "services:stop": "docker compose -f ./infra/compose.yaml stop",
    "services:down": "docker compose -f ./infra/compose.yaml down -v",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"NODE_OPTIONS=--experimental-vm-modules jest --runInBand --verbose\"",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll --runInBand --verbose",
    "migration:create": "node infra/scripts/create-migration.js",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migration:down": "node-pg-migrate -m infra/migrations --envPath .env.development down",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "next": "16.1.4",
    "node-pg-migrate": "8.0.4",
    "pg": "8.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "husky": "9.1.7",
    "jest": "30.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

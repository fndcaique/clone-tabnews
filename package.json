{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "<fndcaique@gmail.com>",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "APP_ENV=development npm run services:up && npm run services:wait:database && npm run migrations:up && (trap 'npm run services:stop' INT TERM ; next dev)",
    "dev:staging": "APP_ENV=staging next dev",
    "test": "APP_ENV=development npm run services:up && npm run services:wait:database && concurrently -n next,jest -k -s command-jest \"next dev\" \"NODE_OPTIONS=--experimental-vm-modules jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down -v",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node infra/scripts/create-migration.js",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "prepare": "husky",
    "commit": "cz",
    "build": "APP_ENV=production next build",
    "start": "APP_ENV=production next start"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "next": "16.1.6",
    "next-connect": "1.0.0",
    "node-pg-migrate": "8.0.4",
    "pg": "8.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "swr": "2.3.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "husky": "9.1.7",
    "jest": "30.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "overrides": {
    "lodash": "4.17.23",
    "tmp": "0.2.4"
  }
}
